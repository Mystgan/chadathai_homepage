}

.bgimg {
    /*background-color:grey;*/
    min-height: 100%;
    background-position: center;
    background-size: cover;
}

.food {
  z-index:1;
  width:100%;
  height:100%;
}

.menu_img {
  display:flex;
  flex-direction:column;
  justify-content:space-around;
  align-items:center;
  flex-basis:200px;
}

.menu_img span {
  width:100%;
}

.img_desc_bg {
  
}

.inner-flex {
  display:flex;
}

.flex-container {
  display:flex;
  flex-flow:row;
  flex-wrap:nowrap;
/*  justify-content:flex-wrap;*/
  align-content:flex-start;
  align-items:flex-start;
}

.flex1 {
  display:flex;
  flex-direction:column;
  width: 74.99999%;
  font-weight:normal;
}  
  
.flex2 {
  display:flex;
  flex-direction:column;
  justify-content:flex-end;
  align-self:flex-end;
  width: 24.99999%;
  text-align:right!important;
}

.choice {
  font-weight:bold
}

.choice span {
  display:block;
  margin-top:16px!important;
}

.item_combo {
  padding-top:15px;
}

.soup {
  color:#e88b2f;
  display:inline
}

.salad {
  color:#027a1f;
  display:inline
}

.brown_rice {
  color:#bd7b3b;
  display:inline
}

/*--------contact modal------*/
.flex-item1 {
  order:1;
  align-self:center;
}

.flex-item2 {
  order:2;
  align-self:center;
}  
.flex-map{
  display:flex;
  flex-flow:row;
  flex-wrap:nowrap;
  justify-content:center; 
}
.flex-modal{
  display:flex;
  flex-flow:column;
 }
 
.flex-info{
  display:flex;
  flex-flow:column;
}

.time{font-style:italic}
.contact_hours{
  display:flex;
}

